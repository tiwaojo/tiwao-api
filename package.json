{
  "name": "tiwao-api",
  "private": true,
  "version": "1.0.0",
  "description": "A GraphQL API using Prisma and MongoDB",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npx dotenv -e .env.dev -- ts-node-dev --no-notify --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build",
    "start": "func start",
    "codegen": "graphql-codegen",
    "seed": "ts-node-dev --transpile-only prisma/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "npx dotenv -e .env.dev -- prisma db push",
    "prisma:studio": "npx dotenv -e .env.dev -- prisma studio"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@azure/functions": "^4.4.0",
    "@pothos/core": "^3.41.1",
    "@pothos/plugin-prisma": "^3.65.1",
    "@pothos/plugin-validation": "^3.10.1",
    "@pothos/plugin-with-input": "^3.10.1",
    "@prisma/client": "^5.13.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "apollo-server-azure-functions": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^16.8.1",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.23.0",
    "graphql-shield": "^7.6.5",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@types/node": "^18.19.31",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}